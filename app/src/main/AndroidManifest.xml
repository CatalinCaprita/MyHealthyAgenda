<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myhealthyagenda">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".pages.diary.DiaryActivity"></activity>
        <activity android:name=".pages.login.LogActivity"></activity>
        <activity android:name=".pages.home.LoadingActivity"></activity>
        <activity
            android:name=".pages.home.UserMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pages.friends.FriendsActivity"
            android:parentActivityName=".pages.home.UserMainActivity" />
    </application>

</manifest>